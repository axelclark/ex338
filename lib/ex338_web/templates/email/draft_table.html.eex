<table>
  <thead>
    <tr>
      <th>Draft Position</th>
      <th>Fantasy Team</th>
      <th>Fantasy Player</th>
      <th>Sports League</th>
    </tr>
  </thead>
  <tbody>
    <%= for draft_pick <- @draft_picks do %>
      <tr>
        <td><%= draft_pick.draft_position %></td>
        <td><%= if draft_pick.fantasy_team, 
                     do: draft_pick.fantasy_team.team_name %></td>
        <td><%= if draft_pick.fantasy_player, 
                     do: draft_pick.fantasy_player.player_name %></td>
        <td><%= if draft_pick.fantasy_player, 
                     do: draft_pick.fantasy_player.sports_league.abbrev %></td>
      </tr>
    <% end %>
  </tbody>
</table>
