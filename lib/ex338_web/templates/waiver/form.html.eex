<%= form_for @changeset, @action, fn f -> %>
  <%= if @changeset.action do %>
    <%= render Ex338Web.SharedView, "form_error.html" %>
  <% end %>
  <div class="mt-6">
    <div class="md:grid md:grid-cols-3 md:gap-6">
      <div class="md:col-span-1">
        <div class="px-4 sm:px-0">
          <h3 class="text-lg font-medium text-gray-900 leading-6">
            Submit a new Waiver for <%= @fantasy_team.team_name %>
          </h3>
          <p class="mt-1 text-sm text-gray-600 leading-5">
            <%= @fantasy_team.team_name %>'s current waiver position is <%= @fantasy_team.waiver_position %>.
          </p>
        </div>
      </div>
      <div class="mt-5 md:mt-0 md:col-span-2">
        <div class="shadow sm:rounded-md sm:overflow-hidden">

          <div class="px-4 py-5 bg-white sm:p-6">
            <div class="grid grid-cols-3 gap-6">
              <div class="col-span-3 sm:col-span-2">
                <%=
                  input f,
                  :drop_fantasy_player_id,
                  using: :select,
                  select_options: format_players_for_select(@owned_players),
                  prompt: "Select a player to drop"
                %>

                <%=
                  input f,
                  :sports_league,
                  using: :select,
                  select_options: sports_abbrevs(@avail_players),
                  input_class: "sports-select-filter",
                  wrapper_class: "mt-6",
                  prompt: "Select sport to filter players"
                %>

                <%=
                  input f,
                  :add_fantasy_player_id,
                  using: :select,
                  select_options: format_players_for_select(@avail_players),
                  input_class: "players-to-filter",
                  wrapper_class: "mt-3",
                  prompt: "Select player to add"
                %>
              </div>
            </div>
          </div>

          <%= render Ex338Web.SharedView, "form_submit.html", back_route: ~p"/fantasy_teams/#{@fantasy_team.id}" %>

        </div>
      </div>
    </div>
  </div>
<% end %>

<div class="hidden sm:block">
  <div class="py-5">
    <div class="border-t border-gray-300"></div>
  </div>
</div>
